block body
  form(role="form")
   
    .row 
      .form-group
        label(for="place") Where do you plan to go
        input.form-control(type="text", id="place" name="place", placeholder="Type a place in Big Bear")
        p.help-block or 
           a(data-toggle="modal" data-target="#myMap") select on map 
           |or 
           a() dont know yet
      
    .row 
      .form-group
        .block
          label(for="when-date") When  
        .col-md-4
          input(class="form-control" type="text", id="when-date" name="when-date", placeholder="Date")
        .col-md-4
          input(class="form-control" type="text", id="when-time" name="when-time", placeholder="Time")
      
    .row
      label What for?
      .form-group
        .btn-group
          buton(type="button" class="btn btn-default") Family
          buton(type="button" class="btn btn-default") Leisure
          buton(type="button" class="btn btn-default") Event
          buton(type="button" class="btn btn-default") Sight Seeing
    
    .divider
      .form-group
        .col-md-2
          button(type="button" id="countMeIn" class="form-control btn btn-default") Count Me In
        .col-md-2
          button(type="button" id="notYet" class="form-control btn btn-default padding-small-vertical") Not Yet
          
    div(class="modal" id="myMap" role="dialog")
      .modal-dialog
        .modal-content
          .modal-header
             button(type="button" class="close" data-dismiss="modal") Close
          .modal-body
             .div(class="map" id="map")
          .modal-footer